at","components","data","searchQuery","chatList","id","name","lastMessage","messages","sender","text","activeChat","newMessage","showModal","isEdit","computed","filteredChatList","filter","chat","toLowerCase","includes","methods","selectChat","sendMessage","trim","push","Date","now","deleteChat","chatId"],"sources":["C:\\Users\\IMAM\\OneDrive\\Desktop\\LPKNI\\lpkniweb\\src\\views\\PortalBeritaView.vue"],"sourcesContent":["<template>\r\n  <div class=\"w-screen min-h-screen flex flex-col bg-gray-100\">\r\n    <!-- Navbar -->\r\n    <NavbarPusat />\r\n\r\n    <!-- Filter Waktu -->\r\n    <div class=\"flex justify-center space-x-4 mt-6\">\r\n      <button\r\n        v-for=\"filter in filters\"\r\n        :key=\"filter\"\r\n        @click=\"setActiveFilter(filter)\"\r\n        :class=\"[ \r\n          'px-4 py-2 rounded-full text-sm font-semibold transition-all duration-300',\r\n          activeFilter === filter ? 'bg-[#03a980] text-white' : 'bg-gray-200 text-gray-700 hover:bg-[#028a66]'\r\n        ]\"\r\n      >\r\n        {{ filter }}\r\n      </button>\r\n    </div>\r\n\r\n    <div class=\"p-8 mt-[100px]\">\r\n      <div class=\"bg-white p-6 rounded-lg shadow animate-fadeIn\">\r\n        <div class=\"flex justify-between items-center mb-4\">\r\n          <h2 class=\"text-lg font-semibold\">Manajemen Chat Pusat</h2>\r\n        </div>\r\n\r\n        <!-- Chat List & Chat Room -->\r\n        <div class=\"flex flex-col md:flex-row\">\r\n          <!-- Sidebar Chat List for Mobile and Desktop -->\r\n          <div v-show=\"!activeChat\" class=\"w-full md:w-1/3 bg-gray-50 border-r overflow-y-auto p-4 md:animate-slideInLeft\">\r\n            <input \r\n              type=\"text\" \r\n              v-model=\"searchQuery\" \r\n              class=\"w-full p-2 border rounded-lg mb-4 transition-all duration-300\" \r\n              placeholder=\"Cari chat...\" \r\n            />\r\n            <ul class=\"space-y-2\">\r\n              <li \r\n                v-for=\"chat in filte