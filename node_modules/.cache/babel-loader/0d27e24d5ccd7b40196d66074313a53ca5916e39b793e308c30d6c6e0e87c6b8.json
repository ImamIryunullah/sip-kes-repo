le.error(error);\n        alert(\"Registration failed. Please try again.\");\n      });\n    },\n    toggleDarkMode() {\n      this.isDarkMode = !this.isDarkMode;\n      if (this.isDarkMode) {\n        document.documentElement.classList.add(\"dark\");\n      } else {\n        document.documentElement.classList.remove(\"dark\");\n      }\n    }\n  }\n};","map":{"version":3,"names":["ApiService","data","selectedDaerah","daerahList","wilayahList","form","jenisPendaftaran","firstName","lastName","contactNo","emailUs","username","password","daerah","wilayah","isDarkMode","computed","isFormInvalid","methods","resetForm","updateWilayah","submitForm","userData","registerUser","then","alert","$router","push","catch","error","console","toggleDarkMode","document","documentElement","classList","add","remove"],"sources":["C:\\Users\\IMAM\\OneDrive\\Desktop\\LPKNI\\lpkniweb\\src\\views\\SignUpView.vue"],"sourcesContent":["<template>\r\n  <div :class=\"{'dark': isDarkMode}\" class=\"w-screen h-screen flex justify-center items-center bg-gray-100 dark:bg-gray-900\">\r\n    <div class=\"main-container w-full sm:w-[100%] md:w-[1700px] h-[750px] bg-white dark:bg-gray-800 relative overflow-hidden shadow-lg rounded-lg flex\">\r\n      \r\n      <!-- Left Section (Background) -->\r\n      <div class=\"hidden md:block w-1/2 h-full bg-[#03a980] rounded-r-[40px] flex flex-col justify-center items-center text-white animate-slideIn\">\r\n        <div class=\"w-[80%] h-[50%] relative\">\r\n          <img src=\"@/assets/frame229.png\" alt=\"Illustration\" class=\"w-full h-full object-cover rounded-lg\" />\r\n        </div>\r\n        <span class=\"text-center text-lg font-light px-6 mt-6\">\r\n          \"Your premier digital library for borrowing and reading books\"\r\n        </span>\r\n      </div>\r\n\r\n      <!-- Right Section (Form Sign Up) -->\r\n      <div class=\"w-full sm:w-full md:w-1/2 h-full flex flex-col justify-center items-center px-8 sm:px-12 md:px-20 bg-white border border-gra