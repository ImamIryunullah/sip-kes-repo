{"ast":null,"code":"import \"core-js/modules/web.url-search-params.delete.js\";\nimport \"core-js/modules/web.url-search-params.has.js\";\nimport \"core-js/modules/web.url-search-params.size.js\";\nimport { PDFDocument, rgb } from 'pdf-lib'; // Import rgb dari pdf-lib\n\nexport default {\n  data() {\n    return {\n      nama: '',\n      id: '',\n      jabatan: ''\n    };\n  },\n  methods: {\n    async generatePdf() {\n      // Memuat PDF template dari file\n      const existingPdfBytes = await fetch('/pusatmerah.pdf').then(res => res.arrayBuffer());\n\n      // Membaca file PDF\n      const pdfDoc = await PDFDocument.load(existingPdfBytes);\n\n      // Mengambil halaman pertama\n      const page = pdfDoc.getPages()[0];\n\n      // Menggunakan font standar\n      const font = await pdfDoc.embedFont(PDFDocument.Font.Helvetica);\n\n      // Menambahkan teks dengan warna putih\n      page.drawText(this.nama, {\n        x: 60,\n        y: 170,\n        size: 12,\n        font,\n        color: rgb(1, 1, 1)\n      }); // warna putih\n      page.drawText(this.id, {\n        x: 105,\n        y: 125,\n        size: 12,\n        font,\n        color: rgb(1, 1, 1)\n      }); // warna putih\n      page.drawText(this.jabatan, {\n        x: 150,\n        y: 610,\n        size: 12,\n        font,\n        color: rgb(1, 1, 1)\n      }); // warna putih\n\n      // Mendapatkan PDF yang sudah dimodifikasi\n      const pdfBytes = await pdfDoc.save();\n\n      // Menyimpan atau mengunduh PDF\n      const pdfBlob = new Blob([pdfBytes], {\n        type: 'application/pdf'\n      });\n      const pdfUrl = URL.createObjectURL(pdfBlob);\n      const link = document.createElement('a');\n      link.href = pdfUrl;\n      link.download = 'pusatmerah.pdf';\n      link.click();\n    }\n  }\n};","map":{"version":3,"names":["PDFDocument","rgb","data","nama","id","jabatan","methods","generatePdf","existingPdfBytes","fetch","then","res","arrayBuffer","pdfDoc","load","page","getPages","font","embedFont",