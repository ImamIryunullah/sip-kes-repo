n + `/news/${news.id}`;\r\n      let shareUrl = '';\r\n      \r\n      if (platform === 'whatsapp') {\r\n        shareUrl = `https://api.whatsapp.com/send?text=${encodeURIComponent(news.title + ' - ' + url)}`;\r\n      } else if (platform === 'facebook') {\r\n        shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`;\r\n      } else if (platform === 'twitter') {\r\n        shareUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(news.title)}&url=${encodeURIComponent(url)}`;\r\n      }\r\n      \r\n      window.open(shareUrl, '_blank');\r\n    }\r\n  }\r\n};\r\n</script>\r\n"],"mappings":";;;AA8DA,OAAOA,gBAAe,MAAO,mCAAmC;AAEhE,eAAe;EACbC,UAAU,EAAE;IACVD;EACF,CAAC;EACDE,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,WAAW,EAAE,EAAE;MACfC,gBAAgB,EAAE,EAAE;MACpBC,UAAU,EAAE,CAAC,SAAS,EAAE,UAAU,EAAE,WAAW,EAAE,UAAU,EAAE,eAAe,CAAC;MAC7EC,QAAQ,EAAE,CAAC,GAAGC,KAAK,CAAC,EAAE,CAAC,CAACC,IAAI,CAAC,CAAC,CAAC,CAACC,GAAG,CAACC,CAAA,KAAM;QACxCC,EAAE,EAAED,CAAA,GAAI,CAAC;QACTE,KAAK,EAAE,gBAAgBF,CAAA,GAAI,CAAC,EAAE;QAC9BG,WAAW,EAAE,0BAA0BH,CAAA,GAAI,CAAC,EAAE;QAC9CI,gBAAgB,EAAE,WAAYJ,CAAA,GAAI,EAAE,GAAI,CAAC,EAAE;QAC3CK,QAAQ,EAAE,CAAC,SAAS,EAAE,UAAU,EAAE,WAAW,EAAE,UAAU,EAAE,eAAe,CAAC,CAACL,CAAA,GAAI,CAAC,CAAC;QAClFM,KAAK,EAAE;MACT,CAAC,CAAC,CAAC;MACHC,iBAAiB,EAAE;IACrB,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,YAAYA,CAAA,EAAG;MACb,OAAO,IAAI,CAACb,QAAQ,CAACc,MAAM,CAACC,IAAG,IAC7BA,IAAI,CAACT,KAAK,CAACU,WAAW,CAAC,CAAC,CAACC,QAAQ,CAAC,IAAI,CAACpB,WAAW,CAACmB,WAAW,CAAC,CAAC,MAC/D,IAAI,CAAClB,gBAAe,GAAIiB,IAAI,CAACN,QAAO,KAAM,IAAI,CAACX,gBAAe,GAAI,IAAI,CACzE,CAAC;IACH;EACF,CAAC;EACDoB,OAAO,EAAE;IACPC,mBAAmBA,CAACC,MAAM,EAAE;MAC1B,IAAI,CAACT,iBAAgB,GAAI,IAAI,CAACA,iBAAgB,KAAMS,MAAK,GAAI,IAAG,GAAIA,MAAM;IAC5E,CAAC;IACDC,SAASA,CAACN,IAAI,EAAEO,QAAQ,EAAE;MACxB,MAAMC,GAAE,GAAIC,MAAM,CAACC,QAAQ,CAACC,MAAK,GAAI,SAASX,IAAI,CAACV,EAAE,EAAE;MACvD,IAAIsB,QAAO,GAAI,EAAE;MAEjB,IAAIL,QAAO,KAAM,UAAU,EAAE;QAC3BK,QAAO,GAAI,sCAAsCC,kBAAkB,CAACb,IAAI,CAACT,KAAI,GAAI,KAAI,GAAIiB,G