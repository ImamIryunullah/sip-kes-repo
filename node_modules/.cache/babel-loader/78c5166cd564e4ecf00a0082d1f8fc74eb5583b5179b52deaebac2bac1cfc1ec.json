m();\n      }\n    },\n    getCurrentTime() {\n      const now = new Date();\n      return now.getHours() + \":\" + now.getMinutes().toString().padStart(2, \"0\");\n    },\n    scrollToBottom() {\n      this.$nextTick(() => {\n        const chatContainer = this.$refs.chatContainer;\n        if (chatContainer) {\n          chatContainer.scrollTop = chatContainer.scrollHeight;\n        }\n      });\n    },\n    goBack() {\n      this.$router.push(\"/\");\n    }\n  }\n};","map":{"version":3,"names":["data","newMessage","messages","text","time","getCurrentTime","isUser","contactChoice","messageOptions","methods","selectContact","contact","startChat","option","push","setTimeout","scrollToBottom","sendMessage","trim","now","Date","getHours","getMinutes","toString","padStart","$nextTick","chatContainer","$refs","scrollTop","scrollHeight","goBack","$router"],"sources":["C:\\Users\\IMAM\\OneDrive\\Desktop\\LPKNI\\lpkniweb\\src\\views\\ChatMulaiVIew.vue"],"sourcesContent":["<template>\r\n  <div class=\"w-screen h-screen flex flex-col bg-gray-100\">\r\n    <!-- Header -->\r\n    <header class=\"flex w-full h-[70px] px-6 justify-between items-center bg-[#03a980] shadow-md\">\r\n      <h2 class=\"text-white text-xl font-bold\">Chat</h2>\r\n      <button @click=\"/user/\" class=\"text-white hover:underline\">Kembali</button>\r\n    </header>\r\n\r\n    <!-- Pilihan Tujuan Kontak -->\r\n    <div v-if=\"!contactChoice\" class=\"flex flex-col justify-center items-center p-8 space-y-6\">\r\n      <h3 class=\"text-xl font-semibold\">Pilih Tujuan Kontak</h3>\r\n      <div class=\"space-x-4\">\r\n        <button @click=\"selectContact('admin')\" class=\"px-6 py-2 bg-[#03a980] text-white rounded-lg hover:bg-[#028a66]\">Hubungi Admin</button>\r\n        <button @click=\"selectContact('pusat')\" class=\"px-6 py-2 bg-[#03a980] text-white rounded-lg hover:bg-[#028a66]\">Hubungi Pusat</button>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Informasi Sebelum Memulai Percakapan -->\r\n    <div v-if=\"contactChoice\" class=\"flex flex-col justify-center items-center p-8 space-y-6\">\r\n      <h3 class=\"text-xl font-semibold\">Silakan pilih kalimat untuk memulai percakapan:</h3>\r\n      <div v-if=\"contactChoice === 'admin'\" class=\"text-center text-gray-500\">\r\n        <p>Hubungi Admin untuk masalah akun atau pertanyaan teknis terkait layanan kami. Admin akan merespon secepatnya.</p>\r\n        <img src=\"https://via.placeholder.com/150\" alt=\"Admin\" class=\"mt-4 rounded-full w-32 h-32 object-cover\" />\r\n      </div>\r\n      <div v-if=\"contactChoice === 'pusat'\" class=\"text-center text-gray-500\">\r\n        <p>Hubungi Pusat untuk pertanyaan umum atau informasi terkait layanan kami. Tim Pusat siap membantu Anda.</p>\r\n        <img src=\"https://via.placeholder.com/150\" alt=\"Pusat\" class=\"mt-4 rounded-full w-32 h-32 object-cover\" />\r\n      </div>\r\n      <div class=\"space-x-4\">\r\n        <button \r\n          v-for=\"(option, index) in messageOptions\" \r\n          :key=\"index\" \r\n          @click=\"startChat(option)\" \r\n          class=\"px-6 py-2 bg-[#03a980] text-white rounded-lg hover:bg-[#028a66]\">\r\n          {{ option }}\r\n        </button>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Chat Container -->\r\n    <div v-if=\"contactChoice\" class=\"flex flex-col flex-grow p-4 overflow-y-auto\" ref=\"chatContainer\">\r\n      <div v-for=\"(message, index) in messages\" :key=\"index\" class=\"mb-4 flex\" :class=\"{'justify-end': message.isUser}\">\r\n        <div class=\"max-w-[75%] p-3 rounded-lg shadow-md\" :class=\"message.isUser ? 'bg-[#03a980] text-white' : 'bg-white'\">\r\n          <p class=\"text-sm\">{{ message.text }}</p>\r\n          <p class=\"text-xs text-gray-400 mt-1 text-right\">{{ message.time }}</p>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Input Chat -->\r\n    <div v-if=\"contactChoice\" class=\"flex items-center bg-white p-3 border-t\">\r\n      <input \r\n        v-model=\"newMessage\" \r\n        type=\"text\" \r\n        placeholder=\"Ketik pesan...\" \r\n        class=\"flex-grow px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#03a980]\"\r\n        @keyup.enter=\"sendMessage\"\r\n      />\r\n      <button @click=\"sendMessage\" class=\"ml-2 px-4 py-2 bg-[#03a980] text-white rounded-lg hover:bg-[#028a66] transition\">\r\n        Kirim\r\n      </button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      newMessage: \"\",\r\n      messages: [\r\n        { text: \"Halo! Ada yang bisa dibantu?\", time: this.getCurrentTime(), isUser: false }\r\n      ],\r\n      contactChoice: null, // Menyimpan pilihan kontak: 'admin' atau 'pusat'\r\n      messageOptions: [] // Menyimpan pilihan kalimat untuk memulai chat\r\n    };\r\n  },\r\n  methods: {\r\n    // Fungsi untuk memilih tujuan kontak\r\n    selectContact(contact) {\r\n      this.contactChoice = contact;\r\n      if (contact === \"admin\") {\r\n        this.messageOptions = [\r\n          \"Saya ingin bertanya tentang akun saya.\",\r\n          \"Saya mengalami kesulitan teknis.\",\r\n          \"Ada masalah dengan layanan.\"\r\n        ];\r\n      } else if (contact === \"pusat\") {\r\n        this.messageOptions = [\r\n          \"Saya ingin melaporkan masalah.\",\r\n          \"Saya ingin tahu informasi terbaru.\",\r\n          \"Ada pertanyaan tentang layanan.\"\r\n        ];\r\n      }\r\n    },\r\n    // Fungsi untuk memulai chat dengan memilih kalimat\r\n    startChat(option) {\r\n      this.messages.push({ text: option, time: this.getCurrentTime(), isUser: true });\r\n      setTimeout(() => {\r\n        this.messages.push({ text: \"Terima kasih, kami akan segera memproses permintaan Anda.\", time: this.getCurrentTime(), isUser: false });\r\n        this.scrollToBottom();\r\n      }, 1000);\r\n      this.scrollToBottom();\r\n    },\r\n    sendMessage() {\r\n      if (this.newMessage.trim() !== \"\") {\r\n        this.messages.push({ text: this.newMessage, time: this.getCurrentTime(), isUser: true });\r\n        setTimeout(() => {\r\n          this.messages.push({ text: \"Admin sedang online, harap tunggu sebentar.\", time: this.getCurrentTime(), isUser: false });\r\n          this.scrollToBottom();\r\n        }, 1000);\r\n        this.newMessage = \"\";\r\n        this.scrollToBottom();\r\n      }\r\n    },\r\n    getCurrentTime() {\r\n      const now = new Date();\r\n      return now.getHours() + \":\" + now.getMinutes().toString().padStart(2, \"0\");\r\n    },\r\n    scrollToBottom() {\r\n      this.$nextTick(() => {\r\n        const chatContainer = this.$refs.chatContainer;\r\n        if (chatContainer) {\r\n          chatContainer.scrollTop = chatContainer.scrollHeight;\r\n        }\r\n      });\r\n    },\r\n    goBack() {\r\n      this.$router.push(\"/\");\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<!-- <style scoped>\r\n/* Responsif untuk layar kecil */\r\n@media screen and (max-width: 768px) {\r\n  .max-w-[75%] {\r\n    max-width: 85%;\r\n  }\r\n}\r\n</style> -->\r\n"],"mappings":";AAkEA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,UAAU,EAAE,EAAE;MACdC,QAAQ,EAAE,CACR;QAAEC,IAAI,EAAE,8BAA8B;QAAEC,IAAI,EAAE,IAAI,CAACC,cAAc,CAAC,CAAC;QAAEC,MAAM,EAAE;MAAM,EACpF;MACDC,aAAa,EAAE,IAAI;MAAE;MACrBC,cAAc,EAAE,EAAC,CAAE;IACrB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP;IACAC,aAAaA,CAACC,OAAO,EAAE;MACrB,IAAI,CAACJ,aAAY,GAAII,OAAO;MAC5B,IAAIA,OAAM,KAAM,OAAO,EAAE;QACvB,IAAI,CAACH,cAAa,GAAI,CACpB,wCAAwC,EACxC,kCAAkC,EAClC,6BAA4B,CAC7B;MACH,OAAO,IAAIG,OAAM,KAAM,OAAO,EAAE;QAC9B,IAAI,CAACH,cAAa,GAAI,CACpB,gCAAgC,EAChC,oCAAoC,EACpC,iCAAgC,CACjC;MACH;IACF,CAAC;IACD;IACAI,SAASA,CAACC,MAAM,EAAE;MAChB,IAAI,CAACX,QAAQ,CAACY,IAAI,CAAC;QAAEX,IAAI,EAAEU,MAAM;QAAET,IAAI,EAAE,IAAI,CAACC,cAAc,CAAC,CAAC;QAAEC,MAAM,EAAE;MAAK,CAAC,CAAC;MAC/ES,UAAU,CAAC,MAAM;QACf,IAAI,CAACb,QAAQ,CAACY,IAAI,CAAC;UAAEX,IAAI,EAAE,2DAA2D;UAAEC,IAAI,EAAE,IAAI,CAACC,cAAc,CAAC,CAAC;UAAEC,MAAM,EAAE;QAAM,CAAC,CAAC;QACrI,I