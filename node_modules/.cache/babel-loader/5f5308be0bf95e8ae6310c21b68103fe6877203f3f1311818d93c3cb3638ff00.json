Response(complaint) {\n      if (complaint.tanggapan.trim() !== \"\") {\n        console.log(\"Sent response:\", complaint.tanggapan);\n        alert(\"Tanggapan telah dikirim!\");\n        complaint.tanggapan = \"\";\n      } else {\n        alert(\"Tanggapan tidak boleh kosong!\");\n      }\n    },\n    deleteComplaint(id) {\n      this.complaints = this.complaints.filter(complaint => complaint.id !== id);\n      alert('Pengaduan berhasil dihapus!');\n    },\n    nextPage() {\n      if (this.currentPage < this.totalPages) this.currentPage++;\n    },\n    prevPage() {\n      if (this.currentPage > 1) this.currentPage--;\n    }\n  }\n};","map":{"version":3,"names":["NavbarPusat","components","data","complaints","id","daerah","kategori","NamaPengadu","judul","deskripsi","harapan","status","lampiran","tanggapan","currentPage","itemsPerPage","computed","totalPages","Math","ceil","length","paginatedComplaints","start","end","slice","methods","getStatusClass","updateComplaintStatus","complaint","console","log","sendResponse","trim","alert","deleteComplaint","filter","nextPage","prevPage"],"sources":["C:\\Users\\IMAM\\OneDrive\\Desktop\\LPKNI\\lpkniweb\\src\\views\\pusat\\DataPengaduanView.vue"],"sourcesContent":["<template>\r\n  <div class=\"w-screen bg-gray-100 mt-12 flex\">\r\n    <!-- Sidebar Offset -->\r\n    <div class=\"w-64\"></div>\r\n\r\n    <!-- Main Content -->\r\n    <div class=\"flex flex-col items-center p-4 sm:p-6 md:p-10 bg-gray-100 flex-grow ml-64\">\r\n      <div class=\"bg-white w-full max-w-4xl p-4 sm:p-6 rounded-lg shadow-md\">\r\n        <h2 class=\"text-xl sm:text-2xl font-semibold text-[#03a980] text-center mb-4 sm:mb-6\">Layanan Pengaduan - Pusat</h2>\r\n\r\n        <div class=\"flex flex-col sm:flex-row justify-between items-center mb-4\">\r\n          <button @click=\"prevPage\" :disabled=\"currentPage === 1\" class=\"p-2 bg-gray-300 text-gray-700 rounded-md disabled:opacity-50\">Previous</button>\r\n          <span class=\"my-2 sm:my-0\">Page 