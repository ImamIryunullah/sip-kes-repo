{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.filter.js\";\nimport \"core-js/modules/es.iterator.map.js\";\nimport NavbarPortalView from \"@/components/NavbarPortalView.vue\";\nexport default {\n  components: {\n    NavbarPortalView\n  },\n  data() {\n    return {\n      searchQuery: \"\",\n      selectedCategory: \"\",\n      categories: [\"Politik\", \"Olahraga\", \"Teknologi\", \"Nasional\", \"Internasional\"],\n      newsList: [...Array(20).keys()].map(i => ({\n        id: i + 1,\n        title: `Judul Berita ${i + 1}`,\n        description: `Deskripsi berita nomor ${i + 1}`,\n        tanggalPublikasi: `2024-02-${i % 28 + 1}`,\n        kategori: [\"Politik\", \"Olahraga\", \"Teknologi\", \"Nasional\", \"Internasional\"][i % 5],\n        image: \"https://via.placeholder.com/300\"\n      })),\n      showShareDropdown: null // ✅ State untuk menyimpan ID berita yang sedang menampilkan dropdown share\n    };\n  },\n  computed: {\n    filteredNews() {\n      return this.newsList.filter(news => news.title.toLowerCase().includes(this.searchQuery.toLowerCase()) && (this.selectedCategory ? news.kategori === this.selectedCategory : true));\n    }\n  },\n  methods: {\n    toggleShareDropdown(newsId) {\n      // ✅ Toggle dropdown hanya untuk berita tertentu\n      this.showShareDropdown = this.showShareDropdown === newsId ? null : newsId;\n    },\n    shareNews(news, platform) {\n      const url = `${window.location.origin}/news/${news.id}`;\n      let shareUrl = \"\";\n      switch (platform) {\n        case \"whatsapp\":\n          shareUrl = `https://api.whatsapp.com/send?text=${encodeURIComponent(news.title + \" - \" + url)}`;\n          break;\n        case \"facebook\":\n          shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`;\n          break;\n        case \"twitter\":\n          shareUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(news.title)}&